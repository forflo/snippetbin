(* run iTunes *)
tell application "iTunes"
	run
end tell

(* quit iTunes *)
tell application "iTunes"
	quit
end tell

(* next track *)
tell application "iTunes"
	next track
end tell

(* previous track *)
tell application "iTunes"
	back track
end tell

(* pause playback *)
tell application "iTunes"
	pause
end tell

(* play *)
tell application "iTunes"
	play
end tell
